    <script>
        let timeLeft = 30;
        const timer = setInterval(() => {
            if (timeLeft > 0) {
                timeLeft--;
                document.getElementById("countdown").textContent = timeLeft;
            } else {
                clearInterval(timer);
                alert("Time's up! Try again!");
            }
        }, 1000);
    </script>
